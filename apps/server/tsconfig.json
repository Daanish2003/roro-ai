{
  "extends": ["@roro-ai/typescript-config/base.json"],
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "emitDeclarationOnly": false,
    "module": "ESNext",
    "target": "ES2022",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "allowImportingTsExtensions": true,
    "baseUrl": ".",
    "paths": {
      "@roro-ai/*": ["../packages/*/src"],
      "@roro-ai/server/*": ["./src/*"]
    },
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
