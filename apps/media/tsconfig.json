{
  "extends": ["@roro-ai/typescript-config/base.json"],
  "exclude": ["node_modules", "dist"],
  "include": ["src/**/*.ts"],
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "isolatedModules": false,
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",
    "rootDir": "src",
    "target": "ES2020"
  }
}