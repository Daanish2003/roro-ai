{
  "extends": "@roro-ai/typescript-config/base.json",
  "include": [
    "next-env.d.ts", 
    "**/*.ts", 
    "**/*.tsx", 
    "tsup.config.ts", 
    "src/**/*"
  ],
  "exclude": [
    "node_modules", 
    "dist"
  ],
  "compilerOptions": {
    "baseUrl": ".", 
    "paths": {
      "@/*": ["src/*"] 
    },
    "rootDir": "src",
    "outDir": "dist",
    "module": "NodeNext", 
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false, 
    "target": "ES2022", 
    "strict": true, 
    "skipLibCheck": true, 
    "incremental": true, 
    "resolveJsonModule": true
  }
}
