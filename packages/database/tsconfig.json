{
  "extends": "@roro-ai/typescript-config/base.json",
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "tsup.config.ts", "src/client.ts"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*" : ["./src/*"]
    },
    "rootDir": "./src",
    "outDir": "./dist",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
  }
}
