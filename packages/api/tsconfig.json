{
    "compilerOptions": {
      "target": "ES2020",
      "module": "NodeNext",
      "moduleResolution": "nodenext",
      "outDir": "dist",
      "rootDir": "src",
      "strict": true,
      "skipLibCheck": true,
      "declaration": true,
      "declarationMap": true,
      "emitDeclarationOnly": false,
      "forceConsistentCasingInFileNames": true,
      "typeRoots": ["./types", "./node_modules/@types"]
    },
    "include": ["src/**/*", "src/types"],
    "exclude": ["node_modules", "dist"]
  }
  